<?xml version="1.0"?>
<launch>
	<arg name="gui" 		default="false" />
	<arg name="controller" 		default="TaskInverseKinematics" />
	<arg name="stopped_controllers" default="TaskInverseKinematics" />
  	<arg name="params_dir" 		default="$(find ahand_parameters)" />

	<arg name="use_real"		default="true"/>
	<arg name="use_sim" 		default="false"/>
	<arg name="use_rviz" 		default="true"/>
	<arg name="robot_name" 		default="ahand"/>

   	<param name="robot_description" command="$(find xacro)/xacro.py '$(find ahand_description)/urdf/allegro_hand.xacro'" />
	<param name="use_gui" value="$(arg gui)"/>

	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
		<rosparam param="source_list">[/ahand/joint_states]</rosparam>
    		<param name="use_gui" value="false"/>
		<param name="rate" value="100"/>
	</node>

	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
	    <rosparam param="publish_frequency">100</rosparam>
	</node>

	<!-- controllers -->
	<include file="$(find ahand_controllers)/launch/load_controller.launch">
		<arg name="controller" value="$(arg controller)" />
		<arg name="stopped_controllers" value="$(arg stopped_controllers)" />
	</include>

	<!-- gazebo simulation -->
	<group if="$(arg use_sim)">
		<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model $(arg robot_name)"  respawn="false" output="screen" />

		<include file="$(find gazebo_ros)/launch/empty_world.launch">
			<arg name="world_name" value="simple world"/>
			<arg name="paused" value="false"/>
			<arg name="use_sim_time" value="true"/>
			<arg name="gui" value="true"/>
			<arg name="headless" value="false"/>
			<arg name="debug" value="false"/>
		</include>
	</group>

	<!-- hardware interface to allegro hand -->     	
	<node name="ahand_can" pkg="ahand_hw" type="ahand_hw_can_node" output="screen"/>

        <!-- rviz -->
     	<node name="rviz" pkg="rviz" type="rviz" required="true" if="$(arg use_rviz)"/>

</launch>
